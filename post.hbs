{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post,
      which can also be a page, and #page does not work for this 🤐 --}}
{{#post}}

<main>
    <header class="post-full-header">
        <section class="meta">
            <time datetime="{{date format="YYYY-MM-DD HH:mm:ss"}}">{{date format="D. MMMM[ta] YYYY [klo] H.mm"}}</time>
            <span class="post-authors">// {{authors}}</span>
            {{#primary_tag}}
                <span class="post-tags">// <a href="{{url}}">{{name}}</a></span>
            {{/primary_tag}}
        </section>

        <h1 class="post-full-title">{{title}}</h1>
    </header>

    <article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

        <section class="post-content">
            {{content}}    
        </section>

    </article>
</main>

{{/post}}

{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in default.hbs --}}
{{#contentFor "scripts"}}
{{/contentFor}}
