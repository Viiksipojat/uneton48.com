<header class="site-header">
    {{> "site-nav"}}

    <h1 class="site-title">
        {{#if post.feature_image}}
        <figure class="post-full-image">
            <img
                srcset="{{img_url post.feature_image size="l"}} 1x,
                        {{img_url post.feature_image size="xl"}} 2x"
                src="{{img_url post.feature_image size="l"}}"
                alt="{{title}}"
            />
        </figure>

        {{else if @site.cover_image}}
        <figure class="cover-image">
            <img
                srcset="{{img_url @site.cover_image size="l"}} 1x,
                        {{img_url @site.cover_image size="xl"}} 2x"
                src="{{img_url @site.cover_image size="l"}}"
                alt="{{@site.title}}"
            />
        </figure>

        {{else}}
        {{@site.title}}
        {{/if}}
    </h1>

    <!-- <h2 class="site-description">{{@site.description}}</h2> -->
</header>
